{
  "name": "karma-ceri",
  "description": "making unit testing easy",
  "version": "1.0.0",
  "homepage": "https://github.com/cerijs/",
  "author": {
    "name": "Paul Pflugradt",
    "email": "paul.pflugradt@gmail.com"
  },
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/cerijs/karma-ceri"
  },
  "engines": {
    "node": "*"
  },
  "files": [
    "lib/*.js"
  ],
  "devDependencies": {
    "chai": "^3.5.0",
    "coffee-loader": "^0.7.2",
    "coffee-script": "^1.12.3",
    "karma": "^1.4.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "script-runner": "^0.1.6",
    "webpack": "^2.2.1"
  },
  "keywords": [],
  "readmeFilename": "README.md",
  "scripts": {
    "test": "ceri-dev-server --test",
    "prebuild": "rimraf lib/",
    "build": "run-npm -p build:*",
    "build:coffee": "coffee --bare --no-header --compile --output lib/ src/index.coffee",
    "build:webpack": "webpack --optimize-minimize --module-bind coffee=coffee-loader src/ceri-test.coffee lib/ceri-test.js",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && npm publish"
  },
  "dependencies": {
    "document-register-element": "^1.3.0"
  }
}
